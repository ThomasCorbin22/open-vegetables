<div class='container-fluid'>
    <div class='row '>
        <div class='col-sm-10 '>
            <ul class='nav justify-content-around navbar-light bg-light mb-2'>
                <li class='nav-item'>
                    <a href='#' class='nav-link'>Latest</a>
                </li>
                <li class='nav-item'>
                    <a href='#' class='nav-link'>Hotest</a>
                </li>
                <li class='nav-item'>
                    <a href='#' class='nav-link'>Rating</a>
                </li>
                <li clas='nav-item '>
                    <a href='#' class='nav-link'>Publisher</a>
                </li>
            </ul>
            <div class='container-fluid'>
                <div class='row'>
                    {{#each blogs}}
                    <div class='col-sm-9'>
                        <div class='card custom-height overflow-auto'>
                            <div class='card-body'>
                                <a href=''>
                                    <h2 class='card-title'> {{title}}</h2>
                                </a>
                                <h7 class='card-subtitle text-muted'>Restaurant Name </h7>
                                <h7 class='card-subtitle text-muted'>{{date_created}} </h7>
                                <h7 class='card-subtitle text-muted'>{{date_modified}}</h7>
                                <p class='card-text'>{{body}}</p>
                                <img class='card-img w-50' src='{{picture_URL}}'>

                            </div>
                        </div>
                    </div>
                    <div class='col-sm-3 d-flex align-items-center'>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Rate</li>
                            <li class="list-group-item">Meal Date</li>
                            <li class="list-group-item">Price</li>
                        </ul>
                    </div>
                    {{/each}}

                </div>
            </div>


        </div>

    </div>
</div>