<div class='container-fluid'>
    {{> filter_nav}}
    <div class="row">
        <div class="col">
            {{#each blogs}}
            <div class='card custom-height overflow-auto mt-0 mb-3'>
                <a href='/blog/details/{{id}}'>
                    <h5 class='card-header'> {{title}}</h5>
                </a>
                <div class='card-body'>
                    <h7 class='card-subtitle'>
                        {{#each categories}}
                            {{this}}
                        {{/each}}
                        </h7>
                    <br>
                    <h7 class='card-subtitle text-muted'>Date Created: {{date_modified}}</h7>
                    <br>
                    <h7 class='card-subtitle text-muted'>Date Modified: {{date_modified}}</h7>
                    <p class='card-text'>{{body}}</p>
                    {{#if pictures.[0]}}
                    <img class='card-img custom-area-sm p-1' src={{pictures.[0]}}>
                    {{/if}}
                    {{#if pictures.[1]}}
                    <img class='card-img custom-area-sm p-1' src={{pictures.[1]}}>
                    {{/if}}
                    {{#if pictures.[2]}}
                    <img class='card-img custom-area-sm p-1' src={{pictures.[2]}}>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{> pagination_controls}}
</div>
