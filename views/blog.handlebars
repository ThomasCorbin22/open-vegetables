<div class='container-fluid'>
    <div class='row my-2'>
        <div class="col">
            <ul class='filter-bar d-flex justify-content-around w-100 m-0'>
                <button onclick="window.location.href='/blogs/latest';" class='btn btn-primary btn-green flex-grow-1'>Latest</button>
                <button onclick="window.location.href='/blogs/rating';" class='btn btn-primary btn-green flex-grow-1'>Rating</button>
                <button onclick="window.location.href='/blogs/publisher';" class='btn btn-primary btn-green flex-grow-1'>Publisher</button>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{#each blogs}}
            <div class='card custom-height overflow-auto m-0'>
                <a href='details/{{id}}'>
                    <h2 class='card-header'> {{title}}</h2>
                </a>
                <div class='card-body'>
                    <h7 class='card-subtitle text-muted'>{{categories}}</h7>
                    <h7 class='card-subtitle text-muted'>{{date_modified}}</h7>
                    <p class='card-text'>{{body}}</p>
                    {{#if pictures.[0]}}
                    <img class='card-img custom-area-small p-1' src={{pictures.[0]}}>
                    {{/if}}
                    {{#if pictures.[1]}}
                    <img class='card-img custom-area-small p-1' src={{pictures.[1]}}>
                    {{/if}}
                    {{#if pictures.[2]}}
                    <img class='card-img custom-area-small p-1' src={{pictures.[2]}}>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
