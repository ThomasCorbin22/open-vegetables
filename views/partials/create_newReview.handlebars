<form id='createNew' style="display:none" class='newReview'>
    <div class='card-body'>
        <div class="form-group">
            <label for="newTitle">Title</label>
            <input type="text" class="form-control" id="newTitle" name='title' placeholder="Enter Title">
        </div>
        <div class='form-group'>
            <label for='newBody'>Body</label>
            <textarea name='body' class='form-control ' rows='3' id='newBody'></textarea>
        </div>
        <div class="form-group">
            <label>Rating</label>
            <div class='form-control'>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="newRating-1" value="1">
                    <label class="form-check-label" for="rating-1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="newRating-2" value="2">
                    <label class="form-check-label" for="rating-2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="newRating-3" value="3" checked>
                    <label class="form-check-label" for="rating-3">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="newRating-4" value="4">
                    <label class="form-check-label" for="rating-3">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="newRating-5" value="5">
                    <label class="form-check-label" for="rating-3">5</label>
                </div>
            </div>
        </div>
        <div class='form-group'>
            <div class='row'>
                <div class='mx-3 col-sm-4'>
                    <label class="custom-file-label" for="newImg">Images </label>
                    <input type="file" class='custom-file-input uploadImg' id="newImg" name='picture_URL'>
                    <img class='custom-area-sm my-2' src='/pictures/image.png'>
                </div>
            </div>
        </div>
        <div class='form-group'>
            <button type="submit" id='newReviewSubmitBtn' class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>