<form id='create-new' style="display:none">
    <div class="form-group">
        <label for="new-restaurant-name">Restaurant Name</label>
        <input type="text" class="form-control" id="new-restaurant-name" name='name' placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="new-restaurant-address">Restaurant Address</label>
        <input type="text" class="form-control" id="new-restaurant-address" name='street_address' placeholder="Enter address">
    </div>
    <div class="form-group">
        <label for="new-restaurant-phone">Contact Number</label>
        <input type="text" class="form-control" id="new-restaurant-phone" name='telephone_number' placeholder="XXXX XXXX">
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label for="new-restaurant-opening-hours">Opening Hours</label>
                <input name='opening_time' type="text" id='new-restaurant-opening-hours' class="form-control" placeholder="">
            </div>
            <div class="col">
                <label for="new-restaurant-closing-hours">Closing Hours</label>
                <input name='closing_time' type="text" id='new-restaurant-closing-hours' class="form-control" placeholder="">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label for="new-restaurant-latitude">Latitude</label>
                <input name='latitude' type="text" id='new-restaurant-latitude' class="form-control" placeholder="">
            </div>
            <div class="col">
                <label for="new-restaurant-longitude">Longitude</label>
                <input name='longitude' type="text" id='new-restaurant-longitude' class="form-control" placeholder="">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Categories</label>
        <select id='new-restaurant-categories'class="form-control restaurant-categories" >
        </select>
    </div>
    <div class="form-group">
        <label>District</label>
        <select id='new-restaurant-district'class="form-control restaurant-district">
        </select>
    </div>
    <div class="form-group">
        <label for="new-restaurant-price">Price Ranges (per each)</label>
        <select class="form-control" id="new-restaurant-price">
            <option>$50-100</option>
            <option>$101-150</option>
            <option>$151-200</option>
            <option>$201-250</option>
            <option>>$250</option>
        </select>
    </div>
    <div class="form-group">
        <label for="new-restaurant-url">Web Address</label>
        <input type="text" class="form-control" id="new-restaurant-url" name='website_URL' placeholder="url">
    </div>
    <div class="form-group">
        <label for="new-restaurant-social">Social Media</label>
        <input type="text" class="form-control" id="new-restaurant-social" name='social_media_URL' placeholder="url">
    </div>
    <div class='form-group'>
        <label for='new-restaurant-description'>Description</label>
        <textarea name='body' class='form-control ' rows='3' id='new-restaurant-description'></textarea>
    </div>
    <div class="form-group">
        <div class='row'>
            <div class='mx-3 col'>
                <label class="custom-file-label" for="new-logo"> Logo</label>
                <input type="file" class='custom-file-input upload-img' id="new-logo" name='logo'>
                <img class='custom-area-sm my-2' src='/pictures/images.png'>

            </div>
            <div class=' mx-3 col'>
                <label class="custom-file-label" for="new-main-img"> Main Picture</label>
                <input type="file" class='custom-file-input upload-img' id="new-main-img" name='main_picture_URL'>
                <img class='custom-area-sm my-2 ' src='/pictures/image.png'>

            </div>
            <div class=' mx-3 col'>
                <label class="custom-file-label" for="new-picture"> More Pictures</label>
                <input type="file" class='custom-file-input upload-img-more'  name='picture_URL'>
                <div id='new-picture'></div>
            </div>
        </div>
    </div>
    <div class='form-group'>
        <button type="submit" id='new-restaurant-submit-btn' class="btn btn-primary">Submit</button>

    </div>
</form>