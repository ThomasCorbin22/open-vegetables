<form id='create-new' style="display:none" class='new-review'>
    <div class='card-body'>
        <div class="form-group">
            <label for="new-title">Title</label>
            <input type="text" class="form-control" id="new-title" name='title' placeholder="Enter Title">
        </div>
        <div class='form-group'>
            <label for='new-body'>Body</label>
            <textarea name='body' class='form-control ' rows='3' id='new-body'></textarea>
        </div>
        <div class="form-group">
            <label>Rating</label>
            <div class='form-control'>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="new-rating-1" value="1">
                    <label class="form-check-label" for="rating-1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="new-rating-2" value="2">
                    <label class="form-check-label" for="rating-2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="new-rating-3" value="3" checked>
                    <label class="form-check-label" for="rating-3">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="new-rating-4" value="4">
                    <label class="form-check-label" for="rating-3">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rating" id="new-rating-5" value="5">
                    <label class="form-check-label" for="rating-3">5</label>
                </div>
            </div>
        </div>
        <div class='form-group'>
            <div class='row'>
                <div class='mx-3 col-sm-4'>
                    <label class="custom-file-label" for="new-img">Images </label>
                    <input type="file" class='custom-file-input upload-img' id="new-img" name='picture_URL'>
                    <img class='custom-area-sm my-2' src='/pictures/image.png'>
                </div>
            </div>
        </div>
        <div class='form-group'>
            <button type="submit" id='new-review-submit-btn' class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>