<div class="modal" id="loginModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Login Page</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action='/users/login' method='POST'>
                <div class='form-group'>
                    <label for='emailL'>Email address / Nick Name</label>
                    <input type='email' class='form-control' id='emailL'> 
                </div>
                <div class='form-group'>
                    <label for='pwdL'>Password:</label>
                    <input type='password' class='form-control' id='pwdL'>
                </div>
                <button type='submit' class='btn btn-danger'>Login</button>
                </form>
            </div>

        </div>
    </div>
</div>