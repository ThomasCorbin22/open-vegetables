<div class="modal" id="loginModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Login Page</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action='/auth/login' method='POST'>
                    <div class='form-group'>
                        <label for='emailL'>Email address</label>
                        <input type='email' class='form-control' id='emailL' name="username">
                    </div>
                    <div class='form-group'>
                        <label for='pwdL'>Password:</label>
                        <input type='password' class='form-control' id='pwdL' name="password">
                    </div>
                    <div class='form-group'>
                        <button type='button' id='forgetPwdBtn' class='btn btn-sm btn-info btn-password' data-toggle='modal'
                            data-target='#security'>Forgot your password?</button>
                    </div>
                    <div class='form-group'>
                        <button type='submit' class='btn btn-danger'>Login</button>
                        <a href="/auth/facebook" class='btn btn-info btn-facebook'><i class="fa fa-facebook-square"></i>  Log In with Facebook</a>
                        <a href="/auth/google" class='btn btn-info btn-google'><i class="fa fa-google"></i>  Log In with Google</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="modal" id="security">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Security Page</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form id='securityPage' action='/auth/login' method='POST'>
                    <div class='form-group'>
                        <label>Please answer your security question:</label>
                    </div>
                    <div class='form-group'>
                        <label for='securityAns'>Security Question</label>
                        <input type='password' class='form-control' id='securityAns' name="securityAns">
                    </div>
                    <div class='form-group'>
                        <button type='submit' id='submitSecurity' class='btn btn-info'>Submit</button>
                    </div>
                </form>

                <form id='resetPwdPage' action='/auth/login' method='POST' style='display:none'>
                    <div class='form-group'>
                        <label>Reset your password:</label>
                    </div>
                    <div class='form-group'>
                        <label for='resetPwd'>Enter new password</label>
                        <input type='password' class='form-control' id='resetPwd' name="resetPwd">
                    </div>
                    <div class='form-group'>
                        <label for='resetPwd2'>Confirm password</label>
                        <input type='password' class='form-control' id='resetPwd2' name="resetPwd2">
                    </div>
                    <div class='form-group'>
                        <button type='submit' id='submitNewPwd' class='btn btn-info'>Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>