<div class="modal" id="registerModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Register Page</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action='/auth/signup' method='POST'>
                    <div class='form-group'>
                        <label for='nameD'>Display Name</label>
                        <input type='text' class='form-control' id='nameD' name="display_name">
                    </div>
                    <div class='form-group'>
                        <label for='email'>Email address</label>
                        <input type='email' class='form-control' id='emailR' name="username">
                    </div>
                    <div class='form-group'>
                        <label for='nameF'>First Name</label>
                        <input type='text' class='form-control' id='nameF' name="first_name">
                    </div>
                    <div class='form-group'>
                        <label for='nameL'>Last Name</label>
                        <input type='text' class='form-control' id='nameL' name="last_name">
                    </div>
                    <div class='form-group'>
                        <label for='securityQuestion'>Security Question</label>
                        <input type='text' class='form-control' id='securityQuestion' name="securityQuestion">
                    </div>
                    <div class='form-group'>
                        <label for='setSecurityAns'>Security Answer</label>
                        <input type='password' class='form-control' id='setSecurityAns' name="setSecurityAns">
                    </div>
                    <div class='form-group'>
                        <label for='pwd'>Password</label>
                        <input type='password' class='form-control' id='pwd' name="password">
                    </div>
                    <div class='form-group d-flex'>
                        <button type='submit' class='btn btn-danger flex-grow-1'>Register</button>
                        <a href="/auth/facebook" class='btn btn-info btn-facebook mx-2 flex-grow-1'><i
                                class="fab fa-facebook-square"></i>
                            Sign up with Facebook</a>
                        <a href="/auth/google" class='btn btn-info btn-google flex-grow-1'><i class="fab fa-google"></i> Sign up
                            with
                            Google</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>