<form  action='/user/blog{{id}}/userNumber{{blogs.user_id}}' method='POST' style='display:none' class='updateExisting'>
    <div class="form-group">
        <label >Title</label>
        <input type="text" class="form-control"  name='title' placeholder="Enter Title"
            value='{{title}}'>
    </div>
    <div class="form-group">
        <label >Categories</label>
        <div class='form-control' >
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox"  name='category' value="Sustainability">
                <label class="form-check-label" >Sustainability</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox"  name='category' value="News">
                <label class="form-check-label" >News</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox"  name='category' value="Opinion">
                <label class="form-check-label" >Opinion</label>
            </div>
        </div>
    </div>
    <div class='form-group'>
        <label >Body</label>
        <textarea name='body' class='form-control ' rows='3' >{{body}}</textarea>
    </div>
    <div class='row'>
            <div class='mx-3 col-sm-4'>
        <label class="custom-file-label" >Images </label>
        <input type="file" class='custom-file-input uploadImg'  name='picture_URL'>
        <img class='my-2 custom-area-sm min-area ' src='{{blogImg.picture_URL}}'>
            </div>
         </div>
    <div class='form-group'>
        <button type="submit"  class="btn btn-primary">Submit</button>
        <button type="reset"  class="btn btn-primary">Reset </button>
        <button type="submit"  class="ml-auto btn btn-danger">Delete this blog !!</button>

    </div>
</form>