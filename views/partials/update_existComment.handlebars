<form id='existForm-{{id}}' style='display:none' class='updateExisting'>
    <div class="form-group">
        <label for="existTitle">Title</label>
        <input type="text" class="form-control" id="existTitle-{{id}}" name='title' placeholder="Enter Title"
            value='{{title}}'>
    </div>
    <div class='form-group'>
        <label for='existBody'>Body</label>
        <textarea name='body' class='form-control ' rows='3' id='existBody-{{id}}'>{{body}}</textarea>
    </div>
   
    <div class='form-group'>
        <button type="submit" id='existCommentSubmitBtn-{{id}}' class="existCommentSubmit btn btn-primary">Submit</button>
        <button type="submit" id='existCommentDeleteBtn-{{id}}' class="existCommentDelete ml-auto btn btn-danger">Delete</button>
    </div>
</form>