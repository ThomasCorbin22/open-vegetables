<form style='display:none' class='update-existing'>
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control blog-title" name='title' placeholder="Enter Title" value='{{title}}'>
    </div>
    <div class="form-group">
        <label>Categories</label>
        <div class='form-control'>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name='category' value="Sustainability">
                <label class="form-check-label">Sustainability</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name='category' value="News">
                <label class="form-check-label">News</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name='category' value="Opinion">
                <label class="form-check-label">Opinion</label>
            </div>
        </div>
    </div>
    <div class='form-group'>
        <label>Body</label>
        <textarea name='body' class='form-control  blog-body' rows='3'>{{body}}</textarea>
    </div>


    <div class='row '>
        <div class='mx-3 col-sm-4 blogMainImg'>
            <label class="custom-file-label">Main Picture </label>
            <input type="file" class='custom-file-input upload-img' name='picture_URL'>
            <img class='my-2 custom-area-sm min-area blog-main-picture' alt='blog-img' src='{{main_picture_URL}}'>
        </div>
        {{#each blogImg}}
        <div class='mx-3 col-sm-4 blog-imgs'>
            <label class="custom-file-label">More Pictures </label>
            <input type="file" class='custom-file-input upload-img' name='picture_URL'>
            <img class='my-2 custom-area-sm min-area blog-picture' alt='blogImg{{id}}' src='{{picture_URL}}'>
        </div>
        {{/each}}
        <div class='mx-3 col-sm-4'>
            <label class="custom-file-label" for="new-picture"> More Pictures</label>
            <input type="file" class='custom-file-input upload-img-more' name='picture_URL'>
            <div class='new-picture'></div>
        </div>

    </div>
    <div class='form-group btn-blog-group'>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="submit" class="ml-auto btn btn-danger">Delete</button>
    </div>
</form>