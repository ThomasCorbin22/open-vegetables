<form id='exist-form-{{id}}' style='display:none' class='update-existing'>
    <div class="form-group">
        <label for="exist-title">Title</label>
        <input type="text" class="form-control" id="exist-title-{{id}}" name='title' placeholder="Enter Title"
            value='{{title}}'>
    </div>
    <div class='form-group'>
        <label for='exist-body'>Body</label>
        <textarea name='body' class='form-control ' rows='3' id='exist-body-{{id}}'>{{body}}</textarea>
    </div>
   
    <div class='form-group'>
        <button type="submit" id='exist-comment-submit-btn-{{id}}' class="exist-comment-submit btn btn-primary">Submit</button>
        <button type="submit" id='exist-comment-delete-btn-{{id}}' class="exist-comment-delete ml-auto btn btn-danger">Delete</button>
    </div>
</form>