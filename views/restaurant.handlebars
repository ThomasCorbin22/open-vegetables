<div class='container-fluid'>
    <div class='row '>
        <div class='col-sm-10 '>
            {{> restaurants_nav}}

            <div class='container-fluid'>
                {{#each restaurants}}
                <div class='card custom-height overflow-auto mb-3'>
                    <div class='row'>
                        <div class='col-sm-4'>
                            <h5 class='card-header'><a href='/restaurant/details/summary'>{{name}}</a></h5>
                            <div class='card-body'>
                                <img class='w-100 mb-2' src={{main_picture_URL}}>
                                <img class='w-100 ' src='/pictures/Screenshot 2020-06-06 at 3.46.29 PM.png'>
                                <hr>
                                <p class='card-title'></p><i class="fa fa-thumbs-up"></i>
                                Rating</p>
                                <p class='card-title'>â˜† Add to favourite</p>

                            </div>
                        </div>
                        <div class='col-sm-8'>
                            <h5 class='card-header'>Restaurant details</h5>


                            <table class='table'>
                                <tbody>
                                    <tr>
                                        <th scope='row'> Description: </th>
                                        <td>{{description}}</th>
                                    </tr>
                                    <tr>
                                        <th>Price Ranges: </th>
                                        <th> Price ranges</th>
                                    </tr>
                                    <tr>
                                        <th>Categories: </th>
                                        <th> Categories</th>
                                    </tr>
                                    <tr>
                                        <th>Contact Number: </th>
                                        <th> {{telephone_number}}</th>
                                    </tr>
                                    <tr>
                                        <th>Address: </th>
                                        <th> {{address}}</th>
                                    </tr>
                                    <tr>
                                        <th>Web Address: </th>
                                        <th> {{website_URL}}</th>
                                    </tr>
                                    <tr>
                                        <th>Opening Hours :</th>
                                        <th> {{opening_time}} - {{closing_time}}</th>
                                    </tr>
                                    <tr>
                                        <th>Social Media: </th>
                                        <th><a href='{{social_media_URL}}'> {{social_media_URL}}</a></th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
            <div class='col-sm-2'>
            </div>
        </div>
    </div>
</div>