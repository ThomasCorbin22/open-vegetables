<div class='container-fluid'>
    <div class='row '>
        <div class='col-sm-10 '>
            {{> restaurants_nav}}

            <div class='container-fluid'>
                {{#each restaurants}}
                <div class='card custom-height overflow-auto mb-3'>
                    <div class='row'>
                        <div class='col-sm-4'>
                            <h5 class='card-header'><a href='/restaurant/details/{{id}}'>{{name}}</a></h5>
                            <div class='card-body'>
                                <img class='w-100 mb-2 ' src={{main_picture_URL}}>
                                <img class='w-100 custom-area-xs' src={{logo}}>
                                <hr>
                                <p class='card-title'><i class="fa fa-thumbs-up"></i>
                                {{rating}}</p>
                                <p class='card-title add-favourite' >â˜† Add to favourite</p>

                            </div>
                        </div>
                        <div class='col-sm-8'>
                            <h5 class='card-header'>Restaurant details</h5>


                            <table class='table'>
                                <tbody>
                                    <tr>
                                        <th scope='row'> Description: </th>
                                        <td>{{description}}</th>
                                    </tr>
                                    <tr>
                                        <th>Price Ranges: </th>
                                        <th> {{price}}</th>
                                    </tr>
                                    <tr>
                                        <th>Categories: </th>
                                        <th> {{categories}}</th>
                                    </tr>
                                    <tr>
                                        <th>Contact Number: </th>
                                        <th> {{telephone_number}}</th>
                                    </tr>
                                    <tr>
                                        <th>Address: </th>
                                        <th> {{street_address}}</th>
                                    </tr>
                                    <tr>
                                        <th>Web Address: </th>
                                        <th> {{website_URL}}</th>
                                    </tr>
                                    <tr>
                                        <th>Opening Hours :</th>
                                        <th> {{opening_time}} - {{closing_time}}</th>
                                    </tr>
                                    <tr>
                                        <th>Social Media: </th>
                                        <th><a href='{{social_media_URL}}'> {{social_media_URL}}</a></th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class='col-sm-2'>

            </div>
        </div>
    </div>
</div>