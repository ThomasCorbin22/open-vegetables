<div class='container-fluid'>
    {{> filter_nav}}
    <div class='row'>
        <div class="col">
            {{#each restaurants}}
            <div class='card mb-3 mt-0'>
                <div class='row'>
                    <div class='col-sm-4'>
                        <h5 class='card-header'><a href='/restaurant/details/{{id}}'>{{name}}</a></h5>
                        <div class='card-body'>
                            {{#if main_picture_URL}}
                            <img class='w-100 mb-2' src='{{main_picture_URL}}'>
                            {{/if}}
                            {{#if logo}}
                            <img class='w-100 custom-area-xs' src={{logo}}>
                            {{/if}}
                            <hr>
                            {{#if price}}
                            <p class='card-title'>{{price}}</p>
                            {{/if}}
                            <p class='card-title'><i class="fa fa-thumbs-up"></i>
                                {{rating}}</p>
                            {{#if user}}
                            <p class='card-title add-favourite'>â˜† Add to favourite</p>
                            {{/if}}
                        </div>
                    </div>
                    <div class='col-sm-8'>
                        <h5 class='card-header'>Restaurant details</h5>


                        <table class='table'>
                            <tbody>
                                <tr>
                                    <th scope='row'> Description: </th>
                                    <td>{{description}}</th>
                                </tr>
                                <tr>
                                    <th>Categories: </th>
                                    <th> {{categories}}</th>
                                </tr>
                                <tr>
                                    <th>Contact Number: </th>
                                    <th> {{telephone_number}}</th>
                                </tr>
                                <tr>
                                    <th>Address: </th>
                                    <th> {{street_address}}<br>{{district}}<br>{{area}}</th>
                                </tr>
                                <tr>
                                    <th>Opening Hours :</th>
                                    <th> {{opening_hours}}</th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{> pagination_controls}}
</div>