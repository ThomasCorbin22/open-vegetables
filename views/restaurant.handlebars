<div class='container-fluid'>
    <div class='row '>
        <div class='col-sm-10 '>
            {{> restaurants_nav}}

            <div class='container-fluid'>
                {{#each restaurants}}
                <div class='card custom-height overflow-auto mb-3'>
                    <div class='row'>
                        <div class='col-sm-4'>
                            <h4 class='card-header'><a href='/restaurant/details/summary'>{{name}}</a></h4>
                            <div class='card-body'>
                                <img class='w-100 mb-2' src={{main_picture_URL}}>
                                <img class='w-100 ' src='/pictures/Screenshot 2020-06-06 at 3.46.29 PM.png'>
                                <hr>
                                <p class='card-title'></p><i class="fa fa-thumbs-up"></i>
                                Rating</p>
                                <p class='card-title'>â˜† Add to favourite</p>

                            </div>
                        </div>
                        <div class='col-sm-4'>
                            <h4 class='card-header'>res details</h4>
                            <ul class='list-group list-group-flush mt-3'>
                                <li class='list-group-item'>{{description}}</li>
                                <li class='list-group-item'>Price ranges</li>
                                <li class='list-group-item'>Categories</li>
                                <li class='list-group-item'>{{telephone_number}}</li>
                                <li class='list-group-item'>{{address}}</li>
                                <li class='list-group-item'>{{website_URL}}</li>
                                <li class='list-group-item'>{{opening_time}}{{closing_time}}</li>
                                <li class='list-group-item'><a href=''>{{social_media_URL}}</a></li>
                            </ul>
                        </div>
                        <div class='col-sm-4'>
                            <div id="map" style="width:100%;height:400px;"></div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class='col-sm-2'>
            
        </div>
    </div>
</div>
</div>