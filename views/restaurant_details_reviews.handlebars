<div class='container-fluid'>
    <div class='card'>
        <div class='row'>
            <div class='col-sm-4'>
                <h4 class='card-header'><a id='restaLink' href='/restaurant/details/{{restaurant.id}}'>{{restaurant.name}}</a>
                </h4>
                <div class='card-body'>
                    {{#if restaurant.main_picture_URL}}
                    <img class='mb-2 custom-area-sm' src={{restaurant.main_picture_URL}}>
                    {{/if}}
                    {{#if restaurant.logo}}
                    <img class='custom-area-sm' src={{restaurant.logo}}>
                    {{/if}}
                    <hr>
                    {{#if restaurant.price}}
                    <p class='card-title'>{{restaurant.price}}</p>
                    {{/if}}
                    <p class='card-title'></p><i class="fa fa-thumbs-up"></i>{{restaurant.rating}}</p>
                    {{#if user_id}}
                    {{#if restaurant.favourite}}
                    <p id='favourite-{{restaurant.favourite}}' class='card-title add-favourite'>★ Favourite Restaurant</p>
                    {{else}}
                    <p class='card-title add-favourite'>☆ Add to favourite</p>
                    {{/if}}
                    {{/if}}
                </div>
            </div>
            <div class='col-sm-4'>
                <h4 class='card-header'>Restaurant Details</h4>

                <ul class='list-group list-group-flush mt-3'>
                    <h6 class=" mt-1 text-muted">Description</h6>
                    <li class='list-group-item'>{{restaurant.description}}</li>
                    <h6 class=" mt-1 text-muted">Categories</h6>
                    <li class='list-group-item'>{{restaurant.categories}}</li>
                    <h6 class=" mt-1 text-muted">Opening Hours</h6>
                    <li class='list-group-item'>{{restaurant.opening_hours}}</li>
                    <h6 class=" mt-1 text-muted">Telephone Number</h6>
                    <li class='list-group-item'>{{restaurant.telephone_number}}</li>
                    <h6 class=" mt-1 text-muted">Address</h6>
                    <li class='list-group-item'>{{restaurant.street_address}}</li>
                    {{#if restaurant.website_URL}}
                    <h6 class=" mt-1 text-muted">Website</h6>
                    <li class='list-group-item'><a href='{{restaurant.website_URL}}'>{{restaurant.website_URL}}</a></li>
                    {{/if}}
                    {{#if restaurant.social_media_URL}}
                    <h6 class=" mt-1 text-muted">Social Media</h6>
                    <li class='list-group-item'><a href='{{restaurant.social_media_URL}}'>{{restaurant.social_media_URL}}</a></li>
                    {{/if}}
                </ul>
            </div>
            <div class='col-sm-4'>
                <h4 class='card-header'>GeoLocation</h4>
                <div id="app" class="container">
                    <div class="row">
                        <div class="col">
                            <div id="map" class="embed-responsive embed-responsive-16by9 h-100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class='row mb-3'>
        <div class='col'>
            <h3 class='card-header my-3'>Reviews</h3>
            <div class='row'>
                <div class='col-sm-12'>
                    <button type="button" id='createNewbtn' class="btn btn-light btn-lg btn-block mb-3">
                        <span>Create a new review</span>
                    </button>
                    {{>create_newReview}}
                </div>
                {{#each reviews}}
                <div class='col-sm-2 userID{{user_id}}Edit' style='display:none'>
                    <button type="button" class="editBtn btn btn-light h-100 btn-lg btn-block ">
                        <span>Edit</span>
                    </button>
                </div>
                <div class='col-sm-12'>
                    <div class='card custom-height overflow-auto'>
                        <div class='row'>
                            <div class='col-sm-12'>
                                {{>update_existReview}}
                            </div>
                        </div>
                        <div class='row existContent'>
                            <div class='col-sm-3'>
                                <div class='card-body'>
                                    <h5 class='card-title'>{{userName}}</h5>
                                    <img class='w-100 custom-area-small' src={{userImage}}>

                                </div>
                            </div>
                            <div class='col-sm-9'>
                                <div class='card-body'>
                                    <h5 class='card-title'>{{title}}</h5>
                                    <h7 class='card-subtitle text-muted'>Date Created: {{date_created}} </h7>
                                    <br>
                                    <h7 class='card-subtitle text-muted'>Date Modified: {{date_modified}}</h7>
                                    <p class='card-text'>{{body}}</p>
                                    <img class='card-img w-50 custom-area-sm' src={{pictures}}>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>