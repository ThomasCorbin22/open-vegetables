<div class='container-fluid'>
    <div class='card p-0'>
        <h4 class='card-header'><a id='restaLink' href='/restaurant/details/{{restaurant.id}}'>{{restaurant.name}}</a>
        </h4>
        <div class='row p-3'>
            <div class='col-sm-8'>
                <ul class='list-group list-group-flush mt-3'>
                    <h6 class=" mt-1 text-muted">Description</h6>
                    <li class='list-group-item'>{{restaurant.description}}</li>
                    <h6 class=" mt-1 text-muted">Categories</h6>
                    <li class='list-group-item'>{{restaurant.categories}}</li>
                    <h6 class=" mt-1 text-muted">Opening Hours</h6>
                    <li class='list-group-item'>{{restaurant.opening_hours}}</li>
                    <h6 class=" mt-1 text-muted">Telephone Number</h6>
                    <li class='list-group-item'>{{restaurant.telephone_number}}</li>
                    <h6 class=" mt-1 text-muted">Address</h6>
                    <li class='list-group-item'>
                        {{restaurant.street_address}}<br>{{restaurant.district}}<br>{{restaurant.area}}</li>
                    {{#if restaurant.website_URL}}
                    <h6 class=" mt-1 text-muted">Website</h6>
                    <li class='list-group-item'><a href='{{restaurant.website_URL}}'>{{restaurant.website_URL}}</a></li>
                    {{/if}}
                    {{#if restaurant.social_media_URL}}
                    <h6 class=" mt-1 text-muted">Social Media</h6>
                    <li class='list-group-item'><a
                            href='{{restaurant.social_media_URL}}'>{{restaurant.social_media_URL}}</a></li>
                    {{/if}}
                </ul>
            </div>
            <div class='col-sm-4'>
                <div class='card-body'>
                    {{#if restaurant.main_picture_URL}}
                    <img class='mb-2 w-100 custom-area-sm rounded' src={{restaurant.main_picture_URL}}>
                    {{/if}}
                    {{#if restaurant.price}}
                    <p class='card-title'>Price: {{restaurant.price}}</p>
                    {{/if}}
                    <p class='card-title'></p>Rating: {{restaurant.rating}}</p>
                    {{#if user_id}}
                    {{#if restaurant.favourite}}
                    <p id='favourite-{{restaurant.favourite}}' class='card-title add-favourite-restaurant'>★ Favourite Restaurant
                    </p>
                    {{else}}
                    <p class='card-title add-favourite-restaurant'>☆ Add to favourite</p>
                    {{/if}}
                    {{/if}}
                    <hr>
                    <div id="app">
                        <div id="map" class="embed-responsive embed-responsive-16by9 h-100 rounded"></div>
                    </div>
                </div>
            </div>
        </div>
        {{#if restaurant.pictures.[4]}}
        <div class="row p-3 d-flex justify-content-between m-0">
            {{else}}
            <div class="row p-3 m-0">
                {{/if}}
                {{#if restaurant.pictures.[0]}}
                <img class='custom-area-sm rounded m-2' src={{restaurant.pictures.[0]}}>
                {{/if}}
                {{#if restaurant.pictures.[1]}}
                <img class='custom-area-sm rounded m-2' src={{restaurant.pictures.[1]}}>
                {{/if}}
                {{#if restaurant.pictures.[2]}}
                <img class='custom-area-sm rounded m-2' src={{restaurant.pictures.[2]}}>
                {{/if}}
                {{#if restaurant.pictures.[3]}}
                <img class='custom-area-sm rounded m-2' src={{restaurant.pictures.[3]}}>
                {{/if}}
                {{#if restaurant.pictures.[4]}}
                <img class='custom-area-sm rounded m-2' src={{restaurant.pictures.[4]}}>
                {{/if}}
            </div>
        </div>
        <div class='row mb-3'>
            <div class='col'>
                <h3 class='card-header my-3'>Reviews</h3>
                <div class='row'>
                    {{#if user_id}}
                    <div class='col-sm-12'>
                        <button type="button" id='createNewBtn' class="btn btn-light btn-lg btn-block mb-3">
                            <span>Create a new review</span>
                        </button>
                        {{>create_newReview}}
                    </div>
                    {{/if}}
                </div>
                {{#each reviews}}
                <div class="row">
                    <div class='col-sm-2 userID{{user_id}}Edit pt-4' style='display:none'>
                        <button type="button" class="editBtn btn btn-light h-100 btn-lg btn-block">
                            <span>Edit</span>
                        </button>
                    </div>
                    <div class='col-sm-12'>
                        <div class='card custom-height overflow-auto'>
                            <div class='row'>
                                <div class='col-sm-12'>
                                    {{>update_existReview}}
                                </div>
                            </div>
                            <div id='review-{{id}}' class='row existContent'>
                                <div class='col-sm-3'>
                                    <div class='card-body'>
                                        <h5 class='card-title'>{{userName}}</h5>
                                        <img class='custom-area-sm' src={{userImage}}>
                                    </div>
                                </div>
                                <div class='col-sm-5'>
                                    <div class='card-body'>
                                        <h5 class='card-title'>{{title}}</h5>
                                        <h7 class='card-subtitle text-muted'>{{date_created}} </h7>
                                        <br>
                                        {{#if modified}}
                                        <h7 class='card-subtitle text-muted'>Edited: {{date_modified}}</h7>
                                        <br>
                                        {{/if}}
                                        <h7 class='card-subtitle text-muted'>Rating: {{rating}}/5 </h7>
                                        <br>
                                        <p class='card-text'>{{body}}</p>
                                    </div>
                                </div>
                                <div class='col-sm-4'>
                                    <div class='card-body'>
                                        {{#if pictures}}
                                        <img class='card-img w-100 custom-area-sm mt-5' src={{pictures}}>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>