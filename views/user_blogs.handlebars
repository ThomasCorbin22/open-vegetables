<div class='container-fluid'>
    <div class='row '>
        <div class='col-sm-10 '>
            {{> user_nav}}
            {{!-- <div class='row justify-content-center'>
                <img class='img-fluid' src="/pictures/Screenshot 2020-06-06 at 3.46.29 PM.png" alt="">
            </div> --}}
            <div class='container-fluid'>
                <div class='row'>
                    <div class='col-sm-12'>
                        <button type="button" id='createNewBtn' class="btn btn-light btn-lg btn-block mb-3">
                            <span>Create a new blog</span>
                        </button>

                        {{> create_newBlog}}
                    </div>
                    {{#each blogs}}
                    <div class='col-sm-2'>
                        <button type="button"  class=" btn btn-light h-100 btn-lg btn-block editBtn ">
                            <span>Edit</span>
                        </button>
                    </div>
                    <div class='col-sm-10'>

                       {{> update_existBlog}}

                        <div  class='card custom-height overflow-auto existContent' >
                            <a class='blogLink'href='/blog/blogNumber{{id}}'>
                                <h2 class='card-header'> {{title}}</h2>
                            </a>
                            <div class='card-body'>
                                {{#each cate}}
                                <h7 class='card-subtitle text-muted cate{{id}}'>{{category}}</h7>
                                {{/each}}
                                <h7 class='card-subtitle text-muted'>{{date_created}} </h7>
                                <h7 class='card-subtitle text-muted'>{{date_modified}}</h7>
                                <p class='card-text'>{{body}}</p>
                                <img class='card-img custom-area-sm blogImg' src={{blogImg.picture_URL}}>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class='col-sm-2'>

        </div>
    </div>
</div>