    <div class='row '>
        <div class='col-sm-10 '>
            {{> user_nav}}
            <div class='d-flex justify-content-center mb-3'>
                <img class='img-fluid w-50' id='userImage' src={{user.profile_picture_URL}}
                    alt="">
            </div>
            <div class='d-flex justify-content-center'>
                <form>
                    <div class='custom-file'>
                        <input type='file' class='custom-file-input' id='userImageUpload'>
                        <label class='custom-file-label' for='userImageUpload'>Choose a picture</label>
                    </div>
                </form>
            </div>


