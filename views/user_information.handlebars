<div class='container-fluid'>
    <div class='row '>
        <div class='col-sm-10 '>
            {{> user_nav}}
            <div class='d-flex justify-content-center mb-3'>
                <img class='img-fluid w-25' id='userImage' src={{user.profile_picture_URL}} alt="">
            </div>
            <div class='d-flex justify-content-center'>
                <form>
                    <div class='custom-file'>
                        <input type='file' class='custom-file-input' id='userImageUpload'>
                        <label class='custom-file-label' for='userImageUpload'>Choose a picture</label>
                    </div>
                </form>
            </div>

            <form class='m-3'>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">First Name:</span>
                    </div>
                    <input type="text" class="form-control" value="{{user.first_name}}" id="nameFirst"
                        name="nameFirst">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Last Name:</span>
                    </div>
                    <input type="text" class="form-control" value="{{user.last_name}}" id="nameLast"
                        name="nameLast">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Display Name:</span>
                    </div>
                    <input type="text" class="form-control" value="{{user.display_name}}" id="nameDisplay"
                        name="nameDisplay">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email:</span>
                    </div>
                    <input type="email" class="form-control" value="{{user.email}}" id="email" name="email">
                </div>
                <div class="input-group-prepend mb-3">
                    <span class="input-group-text">Description:</span>
                </div>
                <textarea class="form-control" rows="3" id='description'>{{user.description}}</textarea>

                <button type="submit" id='updateuserbtn' class="btn btn-danger my-3">Update</button>
            </form>

            <form id='form-change-password' class='m-3'>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Previous Password:</span>
                    </div>
                    <input type="password" class="form-control" value="" id="oldPassword"
                        name="oldPassword">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">New Password:</span>
                    </div>
                    <input type="password" class="form-control" value="" id="newPassword"
                        name="newPassword">
                </div>
                <button type="submit" id='updatePasswordbtn' class="btn btn-danger my-3">Update</button>
            </form>

            <ul class="nav nav-tabs mb-3">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle='tab' href="#menu1">Favourite Restaurants</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle='tab' href="#menu2">Favourite Blogs</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="menu1" class="tab-pane fade show active">

                    <table class='table'>
                        <thead>
                            <tr class='table-success'>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Contact</th>
                                <th scope="col">Modified date</th>
                                <th scope="col">Preview</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each favorResta}}
                            <th scope="row">{{inc @index}}</th>
                            <td><a href='/restaurant/details/{{id}}'>{{name}}</a></td>
                            <td>{{website_URL}}
                                {{telephone_number}}
                            </td>
                            <td>{{date_modified}}</td>
                            <td><img class="img-responsive w-100 custom-area-small" src={{main_picture_URL}} />
                            </td>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div id="menu2" class="tab-pane fade">
                    <h3>Menu 2</h3>
                    <p>Some content in menu 2.</p>
                </div>
            </div>
        </div>
    </div>
</div>