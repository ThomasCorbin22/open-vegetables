<div class='container-fluid'>
    <div class='row '>
        <div class='col-sm-12 '>
            {{> user_nav}}
            <div class='d-flex justify-content-center mb-3 '>
                {{#if user.profile_picture_URL}}
                <img class='img-fluid w-25' id='user-img' src={{user.profile_picture_URL}} alt="">
                {{/if}}
            </div>
            <div class='d-flex justify-content-center'>
                <form>
                    <div class='custom-file'>
                        <input type='file' class='custom-file-input' id='user-img-upload'>
                        <label class='custom-file-label' for='user-img-upload'>Choose a picture</label>
                    </div>
                </form>
            </div>

            <form class='m-3'>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">First Name:</span>
                    </div>
                    <input type="text" class="form-control" value="{{user.first_name}}" id="name-first" name="name-first">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Last Name:</span>
                    </div>
                    <input type="text" class="form-control" value="{{user.last_name}}" id="name-last" name="name-last">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Display Name:</span>
                    </div>
                    <input type="text" class="form-control" value="{{user.display_name}}" id="name-display"
                        name="name-display">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email:</span>
                    </div>
                    <input type="email" class="form-control" value="{{user.email}}" id="email" name="email">
                </div>
                <div class="input-group-prepend mb-3">
                    <span class="input-group-text">Description:</span>
                </div>
                <textarea class="form-control" rows="3" id='description'>{{user.description}}</textarea>

                <button type="submit" id='update-user-btn' class="btn btn-danger my-3">Update</button>
            </form>

            <form id='form-change-password' class='m-3'>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Previous Password:</span>
                    </div>
                    <input type="password" class="form-control" value="" id="old-password" name="old-password">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">New Password:</span>
                    </div>
                    <input type="password" class="form-control" value="" id="new-password" name="new-password">
                </div>
                <button type="submit" id='update-password-btn' class="btn btn-danger my-3">Update</button>
            </form>

            <ul class="nav nav-tabs mb-3">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle='tab' href="#menu1">Favourite Restaurants</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle='tab' href="#menu2">Favourite Blogs</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="menu1" class="tab-pane fade show active">
                    <table class='table'>
                        <thead>
                            <tr class='table-success'>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Address</th>
                                <th scope="col">Preview</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each restaurants}}
                            <tr>
                                <td scope="row">{{inc @index}}</td>
                                <td><a href='/restaurant/details/{{id}}'>{{name}}</a></td>
                                <td>{{categories}}</td>
                                <td>{{street_address}}<br>{{district}}<br>{{area}}</td>
                                <td><img class="img-responsive custom-area-xs" src={{main_picture_URL}} /></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div id="menu2" class="tab-pane fade">
                    <table class='table'>
                        <thead>
                            <tr class='table-success'>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Publisher</th>
                                <th scope="col">Preview</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each blogs}}
                            <tr>
                                <td scope="row">{{inc @index}}</td>
                                <td><a href='/blog/details/{{id}}'>{{title}}</a></td>
                                <td>{{categories}}</td>
                                <td>{{publisher}}</td>
                                <td><img class="img-responsive custom-area-xs" src={{main_picture_URL}} /></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>