            <form class='m-3' action="/users/info/">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">First Name:</span>
                    </div>
                    <input type="text" class="form-control" placeholder="{{user.first_name}}" id="nameFirst" name="nameFirst">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Last Name:</span>
                    </div>
                    <input type="text" class="form-control" placeholder="{{user.last_name}}" id="nameLast" name="nameLast">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Display Name:</span>
                    </div>
                    <input type="text" class="form-control" placeholder="{{user.display_name}}" id="nameDisplay"
                        name="nameDisplay">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email:</span>
                    </div>
                    <input type="email" class="form-control" placeholder="{{user.email}}" id="email" name="email">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Password:</span>
                    </div>
                    <input type="email" class="form-control" placeholder="{{user.password}}" id="password" name="password">
                </div>
                <div class="input-group-prepend mb-3">
                    <span class="input-group-text">Description:</span>
                </div>
                <textarea class="form-control" rows="3" id='description'>{{user.description}}</textarea>

                <button type="submit" id='updateuserbtn' class="btn btn-danger my-3">Update</button>
            </form>


            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle='tab' href="#menu1">Favourite Restaurants</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle='tab' href="#menu2">Favourite Blogs</a>
                </li>
            </ul>
